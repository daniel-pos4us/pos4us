<?xml version="1.0" encoding="utf-8"?> 
<selector 
    xmlns:android="http://schemas.android.com/apk/res/android"> 
 
    <item android:state_selected="true"> 
        <shape> 
            <solid 
                android:color="@color/category_selected"
                />
            <stroke 
                android:width="3dp" 
                color="@color/stroke" /> 
            <corners 
                android:radius="15dp" /> 
            <padding 
                android:left="10dp" 
                android:top="10dp" 
                android:right="10dp" 
                android:bottom="10dp" /> 
        </shape> 
    </item>
    
   <item> 
        <shape> 
            <solid 
                android:color="@color/category_default"
                />
            <stroke 
                android:width="3dp" 
                color="@color/stroke" /> 
            <corners 
                android:radius="15dp" /> 
            <padding 
                android:left="0dp" 
                android:top="0dp" 
                android:right="0dp" 
                android:bottom="0dp" /> 
        </shape> 
    </item>
</selector>